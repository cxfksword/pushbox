<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="120px">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/title_back" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="24px" android:layout_weight="1">
        <ImageView android:id="@+id/title_icon" android:layout_width="60px" android:layout_height="60px" android:layout_marginLeft="60px" android:layout_marginTop="10px" android:src="@drawable/ic_launcher" android:scaleType="fitXY"/>
        <TextView android:text="@string/app_name" android:textSize="40px" android:textColor="@color/white" android:ellipsize="start" android:id="@+id/title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:singleLine="true"/>
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/title_loading" android:visibility="gone" android:layout_width="44px" android:layout_height="44px" android:layout_marginRight="30px" android:src="@drawable/loading" android:scaleType="fitXY"/>
    <com.xenori.pushbox.ui.component.TimeBar
        android:textSize="40px" android:textColor="@color/white" android:id="@+id/timer_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="60px"/>
</LinearLayout>
